<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollview"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/LoginImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_logo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <EditText
                android:id="@+id/EditEmail"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="@string/username"
                android:fontFamily="@font/arial_medium"
                android:textSize="18sp"
                android:lines="1"
                android:background="@drawable/background_edittext_corner_black_22"
                app:layout_constraintTop_toBottomOf="@id/LoginImage"/>

            <EditText
                android:id="@+id/EditPassword"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="@string/password"
                android:fontFamily="@font/arial_medium"
                android:textSize="18sp"
                android:background="@drawable/background_edittext_corner_black_22"
                app:layout_constraintTop_toBottomOf="@id/EditEmail"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ButtonLogin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/background_corner_orange_14"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="21dp"
                android:text="@string/login"
                android:textColor="@color/white"
                android:fontFamily="@font/arial_bold"
                android:textSize="21sp"
                android:textAllCaps="false"
                android:shadowRadius="@integer/material_motion_duration_medium_2"
                app:layout_constraintTop_toBottomOf="@id/EditPassword"
                />

            <TextView
                android:id="@+id/TextForAssistance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:fontFamily="@font/arial"
                android:letterSpacing="0.04"
                android:text="@string/for_assistance_login_details_contact"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/ButtonLogin"
                app:layout_constraintTop_toBottomOf="@id/ButtonLogin" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>