<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollview"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/LoginImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_logo"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <EditText
                android:id="@+id/EditUsername"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="@string/username"
                android:fontFamily="@font/poppins_medium"
                android:textSize="18sp"
                android:lines="1"
                android:background="@drawable/background_edittext_corner_black_22"
                app:layout_constraintTop_toBottomOf="@id/LoginImage"/>

            <EditText
                android:id="@+id/EditPassword"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:fontFamily="@font/poppins_medium"
                android:textSize="18sp"
                android:background="@drawable/background_edittext_corner_black_22"
                app:layout_constraintTop_toBottomOf="@id/EditUsername"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ButtonLogin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/background_corner_orange_14"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="21dp"
                android:text="@string/login"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="22sp"
                android:textAllCaps="false"
                android:shadowRadius="@integer/material_motion_duration_medium_2"
                android:elevation="20dp"
                app:layout_constraintTop_toBottomOf="@id/EditPassword"
                />

            <TextView
                android:id="@+id/TextForAssistance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:fontFamily="@font/poppins_regular"
                android:letterSpacing="0.04"
                android:text="@string/for_assistance_login_details_contact"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/ButtonLogin"
                app:layout_constraintTop_toBottomOf="@id/ButtonLogin" />

            <TextView
                android:id="@+id/TextTeluguAssist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/english_kannada_telgu"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toBottomOf="@id/TextForAssistance"
                app:layout_constraintStart_toStartOf="@id/TextForAssistance"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="@string/_7406333800"
                android:textSize="12sp"
                android:textColor="@color/orange"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintStart_toEndOf="@id/TextTeluguAssist"
                app:layout_constraintTop_toTopOf="@id/TextTeluguAssist"/>

            <TextView
                android:id="@+id/TextHindiAssist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/english_kannada_hindi"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toBottomOf="@id/TextTeluguAssist"
                app:layout_constraintStart_toStartOf="@id/TextForAssistance"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="@string/_9071386515"
                android:textSize="12sp"
                android:textColor="@color/orange"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintStart_toEndOf="@id/TextHindiAssist"
                app:layout_constraintTop_toTopOf="@id/TextHindiAssist"/>

            <TextView
                android:id="@+id/TextCopyright"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:text="@string/copyright_text"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/TextHindiAssist"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@id/TextCopyright"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>